<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DarkModePrimaryColor</item>
        <item name="colorPrimaryDark">@color/DarkModePrimaryDarkColor</item>
        <item name="colorAccent">#1faa00</item>
        <item name="android:textColorPrimary">@color/DarkModePrimaryTextColor</item>
        <item name="android:textColorHint">@color/DarkModeSecondaryTextColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/DarkModePrimaryColor</item>
        <item name="android:navigationBarColor">@color/DarkModePrimaryColor</item>
        <item name="android:itemBackground">@color/DarkModePrimaryColor</item>

        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:colorButtonNormal">@color/DarkModePrimaryColor</item>
    </style>

    <style name="ButtonColor" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/DarkModePrimaryColor</item>
    </style>

    <style name="HintDialogInputEditText">
        <item name="android:textSize">12sp</item>
        <item name="android:color">@color/DarkModeSecondaryTextColor</item>
    </style>

    <style name="InputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/DarkModeSecondaryTextColor</item>
        <item name="android:textColorHint">@color/DarkModeSecondaryTextColor</item>
        <item name="boxStrokeColor">@color/DarkModeSecondaryTextColor</item>
        <item name="hintTextAppearance">@style/HintDialogInputEditText</item>
    </style>

</resources>
